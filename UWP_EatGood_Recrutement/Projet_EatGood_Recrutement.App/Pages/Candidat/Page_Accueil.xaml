<Page
    x:Class="Projet_EatGood_Recrutement.App.Pages.Page_Accueil"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Projet_EatGood_Recrutement.App.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"></RowDefinition>
            <RowDefinition Height="85"></RowDefinition>
            <RowDefinition Height="707*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- 1ere ligne : Logo et Bienvenue -->
        <Grid x:Name="grd_PremiereLigne">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Background="#FFD5FFCB" Grid.Column="0" Grid.ColumnSpan="2"></Border>
            <Image Grid.Column="0" x:Name="img_fastFood_accueil" Source="../../images/5_image_fastfood.jpg"></Image>
            <TextBlock Grid.Column="1" Text="Bienvenue..." VerticalAlignment="Center" HorizontalAlignment="Center" 
                       Foreground="#0f2459" FocusVisualPrimaryBrush="#FF140606" x:Name="txtBienvenue"
                       FontSize="30" FontFamily="Century Gothic" FontWeight="Bold"></TextBlock>

        </Grid>

        <!-- 2e ligne : Profil, Messages et Nouvelle Candidature -->
        <Grid x:Name="grd_DeuxiemeLigne" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="#0f2459" BorderThickness="1" Grid.Column="0" Background="#FF9D99D7"></Border>
            <Border BorderBrush="#0f2459" BorderThickness="1" Grid.Column="1" Background="#FFDDAC7B"></Border>
            <Border BorderBrush="#0f2459" BorderThickness="1" Grid.Column="2" Background="#FFEE9696"></Border>
            <Button Grid.Column="0" x:Name="BtnProfil" Content="Profil" HorizontalAlignment="Center"
                    Foreground="#0f2459" Background="#FF9D99D7" Click="BtnProfil_Click"
                    FontSize="25" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Height="83" Width="298"/>
            <Button Grid.Column="1" x:Name="BtnMesMessages" Content="Mes messages" HorizontalAlignment="Center"
                    Foreground="#0f2459" Background="#FFDDAC7B" Click="BtnMesMessages_Click"
                    FontSize="25" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Height="83" Width="298"/>
            <Button Grid.Column="2" x:Name="BtnNvelleCandidature" Content="Nouvelle candidature" HorizontalAlignment="Center"
                    Foreground="#0f2459" Background="#FFEE9696" Click="BtnNvelleCandidature_Click"
                    FontSize="25" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Height="83" Width="298"/>
            <Button Grid.Column="3" x:Name="BtnDeconnexion" Content="Se déconnecter" HorizontalAlignment="Right"
                    Foreground="#0f2459" Background="#FFCAB6B6" Click="BtnDeconnexion_Click"
                    FontSize="25" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Height="83" Width="298"/>
        </Grid>
        <!-- 3e ligne : Toutes les candidatures -->
        <Grid x:Name="grd_TroisiemeLigne" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border Background="AliceBlue"></Border>
            <TextBlock Text="Liste de mes candidatures :" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontFamily="Century Gothic" FontSize="40" FontWeight="Bold" Foreground="#0F2459">
            </TextBlock>
            <ListView x:Name="lvCandidaturesCandidat" Grid.Row="1" SelectionChanged="lvCandidaturesCandidat_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="{Binding LeResto.LibelleResto}" Width="200"></TextBlock>
                            <TextBlock Text="{Binding LePosteVoulu.LibellePoste}" Width="200"></TextBlock>
                            <TextBlock Text="{Binding MessageMotivations}" Width="200"></TextBlock>
                            <TextBlock Text="{Binding StatutMessage}" Width="200"></TextBlock>
                            <TextBlock Text="{Binding MessageReponse}" Width="200"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
